<?xml version="1.0"?>
<robot name="pippo"
  xmlns:xacro="http://ros.org/wiki/xacro">

  <!-- Define robot constants -->
  <xacro:property name="base_width" value="0.31"/>
  <xacro:property name="base_length" value="0.42"/>
  <xacro:property name="base_height" value="0.18"/>

  <xacro:property name="wheel_radius" value="0.11"/>
  <xacro:property name="wheel_width" value="0.06"/>
  <xacro:property name="wheel_ygap" value="0.025"/>
  <xacro:property name="wheel_zoff" value="0.05"/>
  <xacro:property name="wheel_xoff" value="0.12"/>

  <xacro:property name="caster_xoff" value="0.14"/>

  <!-- Define some commonly used intertial properties  -->
  <xacro:macro name="box_inertia" params="m w h d">
    <inertial>
      <origin xyz="0 0 0" rpy="${pi/2} 0 ${pi/2}"/>
      <mass value="${m}"/>
      <inertia ixx="${(m/12) * (h*h + d*d)}" ixy="0.0" ixz="0.0" iyy="${(m/12) * (w*w + d*d)}" iyz="0.0" izz="${(m/12) * (w*w + h*h)}"/>
    </inertial>
  </xacro:macro>

  <xacro:macro name="cylinder_inertia" params="m r h">
    <inertial>
      <origin xyz="0 0 0" rpy="${pi/2} 0 0" />
      <mass value="${m}"/>
      <inertia ixx="${(m/12) * (3*r*r + h*h)}" ixy = "0" ixz = "0" iyy="${(m/12) * (3*r*r + h*h)}" iyz = "0" izz="${(m/2) * (r*r)}"/>
    </inertial>
  </xacro:macro>

  <xacro:macro name="sphere_inertia" params="m r">
    <inertial>
      <mass value="${m}"/>
      <inertia ixx="${(2/5) * m * (r*r)}" ixy="0.0" ixz="0.0" iyy="${(2/5) * m * (r*r)}" iyz="0.0" izz="${(2/5) * m * (r*r)}"/>
    </inertial>
  </xacro:macro>

  <!-- Robot Base -->
  <link name="pippo/base_link">
    <visual>
      <geometry>
        <box size="${base_length} ${base_width} ${base_height}"/>
      </geometry>
      <material name="DarkBlue">
        <color rgba="0.09 0.30 0.46 1.0"/>
      </material>
    </visual>

    <collision>
      <geometry>
        <box size="${base_length} ${base_width} ${base_height}"/>
      </geometry>
    </collision>

    <!-- <xacro:box_inertia m="1" w="${base_width}" d="${base_length}" h="${base_height}"/> -->
  </link>

  <!-- <link name="pippo/base_inertia_link">
    <xacro:box_inertia m="1" w="${base_width}" d="${base_length}" h="${base_height}"/>
  </link> -->

  <!-- Robot Footprint -->
  <link name="pippo/base_footprint">
    <xacro:box_inertia m="1" w="${base_width}" d="${base_length}" h="${base_height}"/>
    <!-- <xacro:box_inertia m="0" w="0" d="0" h="0"/> -->
  </link>

  <joint name="base_joint" type="fixed">
    <parent link="pippo/base_link"/>
    <child link="pippo/base_footprint"/>
    <origin xyz="0.0 0.0 ${-(wheel_radius+wheel_zoff)}" rpy="0 0 0"/>
  </joint>

  <!-- Wheels -->
  <xacro:macro name="wheel" params="prefix x_reflect y_reflect">
    <link name="pippo/${prefix}_link">
      <visual>
        <origin xyz="0 0 0" rpy="${pi/2} 0 0"/>
        <geometry>
          <cylinder radius="${wheel_radius}" length="${wheel_width}"/>
        </geometry>
        <material name="LightBlue">
          <color rgba="0.11 0.37 0.56 1.0"/>
        </material>
      </visual>

      <collision>
        <origin xyz="0 0 0" rpy="${pi/2} 0 0"/>
        <geometry>
          <cylinder radius="${wheel_radius}" length="${wheel_width}"/>
        </geometry>
      </collision>

      <xacro:cylinder_inertia m="2.5" r="${wheel_radius}" h="${wheel_width}"/>
    </link>

    <joint name="pippo_${prefix}_joint" type="continuous">
      <parent link="pippo/base_link"/>
      <child link="pippo/${prefix}_link"/>
      <origin xyz="${x_reflect*wheel_xoff} ${y_reflect*(base_width/2+wheel_ygap)} ${-wheel_zoff}" rpy="0 0 0"/>
      <axis xyz="0 1 0"/>
      <dynamics damping="0.2"/>
    </joint>
  </xacro:macro>

  <xacro:wheel prefix="drivewhl_l_front" x_reflect="-1" y_reflect="1" />
  <xacro:wheel prefix="drivewhl_r_front" x_reflect="-1" y_reflect="-1" />
  <xacro:wheel prefix="drivewhl_l_rear" x_reflect="1" y_reflect="1" />
  <xacro:wheel prefix="drivewhl_r_rear" x_reflect="1" y_reflect="-1" />

  <link name="pippo/gnss_link">
    <collision>
        <geometry>
            <sphere radius="0.05"/>
        </geometry>
    </collision>
    <visual>
        <geometry>
            <sphere radius="0.05"/>
        </geometry>
        <material name="black" />
    </visual>
    <inertial>
        <origin xyz="0 0 0.1" rpy="0.3 1.6 -0.4"/>
        <mass value="0.005"/>
        <inertia ixx="0.1" ixy="0.0" ixz="0.0" iyy="0.1" iyz="0.0" izz="0.1"/>
    </inertial>
  </link>

  <joint name="gnss_joint" type="fixed">
    <origin xyz="0 0 -0.05" rpy="0 0 0"/>
    <parent link="pippo/base_link"/>
    <child link="pippo/gnss_link"/>
  </joint>

  <gazebo reference="pippo/gnss_link">
    <sensor name="GazeboNavSat" type="navsat">
        <always_on>1</always_on>
        <update_rate>25.0</update_rate>
        <visualize>true</visualize>
        <topic>/pippo/gps/fix</topic>
        <ignition_frame_id>/pippo/gnss_link</ignition_frame_id>
    </sensor>
  </gazebo>

  <link name="pippo/imu_link">
    <visual>
      <geometry>
        <box size="0.1 0.1 0.1"/>
      </geometry>
    </visual>

    <collision>
      <geometry>
        <box size="0.1 0.1 0.1"/>
      </geometry>
    </collision>

    <xacro:box_inertia m="0.001" w="0.1" d="0.1" h="0.1"/>
  </link>

  <joint name="imu_joint" type="fixed">
    <parent link="pippo/base_link"/>
    <child link="pippo/imu_link"/>
    <origin xyz="0 0 0.01"/>
  </joint>

  <gazebo reference="pippo/imu_link">
    <gravity>true</gravity>

    <sensor name="imu_sensor" type="imu">
      <always_on>true</always_on>
      <update_rate>100</update_rate>
      <visualize>true</visualize>
    
      <plugin filename="libgazebo_ros_imu_sensor.so" name="imu_plugin">
        <ros>
          <namespace>/pippo</namespace>
          <remapping>~/out:=imu</remapping> <!-- This is the topic (/pippo/imu) -->
        </ros>

        <bodyName>imu_link</bodyName>
        <updateRateHZ>100.0</updateRateHZ>

        <xyzOffset>0 0 0</xyzOffset>
        <rpyOffset>0 0 0</rpyOffset>
        
        <frameName>imu_link</frameName>
        <initialOrientationAsReference>false</initialOrientationAsReference>
      </plugin>

      <pose>0 0 0 0 0 0</pose>
    </sensor>
  </gazebo>

  <link name="pippo/lidar_link">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.0508" length="0.055"/>
      </geometry>
      <material name="LightBlue">
        <color rgba="0.11 0.37 0.56 1.0"/>
      </material>
    </visual>

    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.0508" length="0.055"/>
      </geometry>
    </collision>
    
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="0.125"/>
      <inertia ixx="0.001" ixy="0" ixz="0" iyy="0.001" iyz="0" izz="0.001" />
    </inertial>
  </link>

  <joint name="lidar_joint" type="fixed">
    <parent link="pippo/base_link"/>
    <child link="pippo/lidar_link"/>
    <origin xyz="0 0 0.12" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <dynamics damping="0.2"/>
  </joint>

  <gazebo reference="lidar_joint">
    <preserveFixedJoint>true</preserveFixedJoint>S
  </gazebo>

  <!-- Platform -->
  <link name="pippo/platform_link">
    <visual>
      <origin xyz="0 0 0.05" rpy="0 0 0"/>
      <geometry>
        <box size="0.40 0.40 0.01" />
      </geometry>
      <material name="DarkBlue">
        <color rgba="0.09 0.30 0.46 1.0"/>
      </material>
    </visual>

    <collision>
      <origin xyz="0 0 0.05" rpy="0 0 0"/>
      <geometry>
        <box size="0.40 0.40 0.01" />
      </geometry>
    </collision>
    
    <inertial>
      <origin xyz="0 0 0.05" rpy="0 0 0"/>
      <mass value="0.125"/>
      <inertia
              ixx="1.0" ixy="0.0" ixz="0.0"
              iyy="1.0" iyz="0.0"
              izz="1.0"/>
    </inertial>
  </link>

  <joint name="platform_joint" type="fixed">
    <origin xyz="0 0 0.05" rpy="0. 0. 0."/>
    <parent link="pippo/lidar_link" />
    <child link="pippo/platform_link" />
    <axis xyz="0 0 1" rpy="0 0 0"/>
    <limit effort="10000.0" lower="-0.05" upper="0.24" velocity="0.5"/>
  </joint>

  <gazebo reference="platform_joint">
    <preserveFixedJoint>true</preserveFixedJoint>
  </gazebo>

